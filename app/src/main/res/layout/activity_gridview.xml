<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Gridview">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome,"
        android:textColor="@color/colorAccent"
        android:textSize="60dp"
        android:fontFamily="cursive"
        />

    <TextView
        android:id="@+id/Name"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorAccent"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_gravity="center_horizontal"
        android:text="  User"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="207dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/reminders"
                android:layout_width="115dp"
                android:layout_height="95dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="108dp"
                android:background="@drawable/roundcalender"
                tools:ignore="InvalidId" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="68dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Add Reminders"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/reports"
                android:layout_width="125dp"
                android:layout_height="105dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="41dp"
                android:background="@drawable/medical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Upload Reports"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="211dp"
            android:layout_height="599dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/camara"
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/camara2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Cam Scanner"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/share"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/share1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="68dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Share"
                android:textColor="@color/colorAccent"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>